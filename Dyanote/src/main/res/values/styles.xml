<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="DyanoteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/dyanote_yellow_light</item>
        <item name="android:actionBarItemBackground">@color/dyanote_green</item>

        <!-- ActionBar -->
        <item name="android:actionBarStyle">@style/DyanoteActionBar</item>
        <item name="actionBarStyle">@style/DyanoteActionBar</item> <!-- Support library compatibility -->
        <item name="android:actionBarTabTextStyle">@style/DyanoteActionBar</item>
        <item name="actionBarTabTextStyle">@style/DyanoteActionBar</item> <!-- Support library compatibility -->
    </style>

    <!-- ActionBar styles -->
    <style name="DyanoteActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dyanote_green</item>
        <!-- Support library compatibility -->
        <item name="background">@color/dyanote_green</item>
    </style>

    <style name="DyanoteActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dyanote_yellow</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- TextView formatting color styles -->
    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dyanote_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="LinkText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dyanote_blue</item>
    </style>

    <style name="BoldText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItalicText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
